{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block javascripts %}
	{{parent()}}

	<script src="{{ asset('bundles/archfest/js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/archfest/js/jquery/jquery.form.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/archfest/js/jquery/plugins/jquery.gritter.min.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/archfest/js/angular.min.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/archfest/js/angular.config.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/archfest/js/admin/directives/modal.js') }}" type="text/javascript"></script>
{% endblock %}

{% block stylesheets %}
	{{parent()}}
	<!-- jQuery code -->
	<link rel="stylesheet" href="{{ asset('bundles/archfest/css/admin/jquery.gritter.css') }}" type="text/css" media="all" />
{% endblock %}

{% block sonata_nav_menu_after %}
	{% if app.security.token and is_granted('ROLE_SONATA_ADMIN') %}
		<div class="navbar-text pull-right">
			<a href="{{ path('sonata_user_admin_security_logout') }}">
				<i class="icon-off"></i>
				{{ 'user_block_logout'|trans({}, 'SonataUserBundle') }}
			</a>
		</div>
	{% endif %}
{% endblock %}